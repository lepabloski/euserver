{% extends 'EuBundle::layout.html.twig' %}

{% block body %}

    <div class="row text-center" >
        <h1>Promos</h1>
    </div>
    <br />
    <div class="table-responsive" >
        <table id="grilla" class="table table-striped tablesorter table-no-bordered"
               data-toggle="table"
               data-pagination="true"
               data-search="true"
               data-url="data2.json"
               data-page-size="15"
               data-page-list="[10, 25, 50, TODOS]"
               >
            <thead>
                <tr>
                    <th class="text-center" data-field="Titulo" data-sortable="true">Titulo</th>
                    <th class="text-center" data-field="Descripcion" data-sortable="true">Descripci√≥n</th>                
                    <th class="text-center" data-field="Descripcion" data-sortable="true">Negocio</th>       
                    <th class="text-center" data-field="Opciones" data-sortable="true">Opciones</th>

                </tr>
            </thead>
            <tbody>
                {% for promo in promos %}
                    <tr>
                        <td class="text-left">{{ promo.promoTitulo }}</td>
                        <td class="text-center">{{ promo.promoDescrip }}</td>
                        <td class="text-center">{{ promo.negocio.negocioNombre }}</td>
                        <td class="text-center">
                            <a class="btn btn-warning" href="{{ path('promo_show', { 'id': promo.id }) }}">Detalles</a> 
                            <a class="btn btn-danger"  href="{{ path('promo_edit', { 'id': promo.id }) }}">Editar</a>
                        </td>                         
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <br />
    <div class="row text-center">

        <a class="btn btn-success"  href="{{ path('promo_new') }}">Crear un nuevo negocio</a>

    </div>
{% endblock %}
